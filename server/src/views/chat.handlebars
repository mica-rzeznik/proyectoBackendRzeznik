<div>
    <form class="row g-3 needs-validation m-3" id="chat">
        <div class="form-floating mb-3">
            <input name="message" type="text" class="form-control" id="floatingInput" required>
            <label for="floatingInput">Escriba su mensaje</label>
        </div>
        <input type="submit" class="btn btn-outline-success">
    </form>
    <div class="row row-cols-1 row-cols-md-5 g-4 gap-3 m-2">
        {{#each message}}
            <div class="card">
                <div class="card-header">
                    {{user}}
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{message}}</p>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script src="/js/chat.js"></script>