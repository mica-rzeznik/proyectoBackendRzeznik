<div class="row row-cols-1 row-cols-md-3 g-4">
    <div>
        <p>Bienvenid@ {{user.name}}</p>
        <button class="btn btn-primary" id="logout">Logout</button>
    </div>
    {{#each products}}
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="imagen del producto" style="width: 200px">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.price}} sickles de plata</h6>
                    <form action="/api/carts/6447260e5632ff6967b9de94/products/{{this._id}}" method="POST">
                        <button class="btn btn-primary" type="submit">Agregar al carrito</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {{#if hasPrevPage}}
                <li class="page-item"><a class="page-link" href={{prevLink}}>Previous</a></li>
            {{/if}}
            <li class="page-item"><a class="page-link" href="#">{{page}}</a></li>
            {{#if hasNextPage}}
                <li class="page-item"><a class="page-link" href={{nextLink}}>Next</a></li>
            {{/if}} 
        </ul>
    </nav>
</div>
<script src="/js/index.js"></script>